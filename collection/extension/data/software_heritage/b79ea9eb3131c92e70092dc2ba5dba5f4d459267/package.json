{
  "name": "civicgraph",
  "version": "0.0.2",
  "description": "Git-inspired versioned storage for time-variant graph data",
  "repository": {
    "type": "git",
    "url": "https://github.com/adityamukho/CivicGraph"
  },
  "main": "main.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "setup": "grunt initialize",
    "clean": "grunt clean",
    "lint": "grunt eslint",
    "test": "grunt test",
    "testWithCoverage": "grunt testWithCoverage",
    "analyze": "grunt analyze",
    "bundle": "grunt dist"
  },
  "author": "Aditya Mukhopadhyay",
  "license": "Apache-2.0",
  "dependencies": {
    "brace-expansion": "^1.1.11",
    "jiff": "^0.7.3"
  },
  "devDependencies": {
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "grunt": "^1.0.4",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-exec": "^3.0.0",
    "gruntify-eslint": "^5.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
